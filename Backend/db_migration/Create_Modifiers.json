{
	"info": {
		"_postman_id": "create-modifiers-v1",
		"name": "Smart Restaurant - Modifiers Setup",
		"description": "Tạo nhóm Topping và các tùy chọn đi kèm",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Login Admin",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (pm.response.code === 200) {",
							"    pm.collectionVariables.set(\"token\", jsonData.token);",
							"    console.log(\"Login Success\");",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"{{admin_email}}\",\n    \"password\": \"{{admin_password}}\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/auth/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			}
		},
		{
			"name": "2. Create Group: Size (Single Select)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (pm.response.code === 201) {",
							"    pm.collectionVariables.set(\"group_size_id\", jsonData.id);",
							"    console.log(\"Created Group Size ID: \" + jsonData.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Kích Cỡ (Size)\",\n    \"selection_type\": \"single\",\n    \"is_required\": true,\n    \"min_selections\": 1,\n    \"max_selections\": 1\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/menu/modifiers",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"menu",
						"modifiers"
					]
				}
			}
		},
		{
			"name": "3. Add Option: Size M (+0đ)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Size M (Vừa)\",\n    \"price\": 0\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/menu/modifiers/{{group_size_id}}/options",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"menu",
						"modifiers",
						"{{group_size_id}}",
						"options"
					]
				}
			}
		},
		{
			"name": "4. Add Option: Size L (+5000đ)",
