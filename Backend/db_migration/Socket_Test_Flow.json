{
  "info": {
    "_postman_id": "socket-flow-test",
    "name": "Smart Restaurant - Socket Flow Test",
    "description": "Test luồng đặt món và bắn socket",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login Waiter/Admin (Lấy Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (pm.response.code === 200) {",
              "    pm.collectionVariables.set(\"token\", jsonData.token);",
              "    console.log(\"Token set\");",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"admin@gmail.com\",\n    \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "2. [Customer] Place Order (Trigger 'new_order')",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.order && jsonData.order.id) {",
              "    pm.collectionVariables.set(\"current_order_id\", jsonData.order.id);",
              "    console.log(\"Order ID saved: \" + jsonData.order.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"table_id\": \"{{valid_table_id}}\",\n    \"guest_name\": \"Socket Tester\",\n    \"note\": \"Test Realtime\",\n    \"items\": [\n        {\n            \"menu_item_id\": \"{{valid_item_id}}\",\n            \"quantity\": 1\n        }\n    ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": ["{{baseUrl}}"],
          "path": ["orders"]
        }
      }
    },
    {
      "name": "3. [Waiter] Accept Order (Trigger 'update_order')",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"status\": \"preparing\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders/{{current_order_id}}",
          "host": ["{{baseUrl}}"],
          "path": ["orders", "{{current_order_id}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "valid_table_id",
      "value": "PASTE_TABLE_UUID_HERE",
      "type": "string"
    },
    {
      "key": "valid_item_id",
      "value": "PASTE_ITEM_UUID_HERE",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "current_order_id",
      "value": "",
      "type": "string"
    }
  ]
}
